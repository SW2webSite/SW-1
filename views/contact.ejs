<%- include('header') -%>
<link rel="stylesheet" href="/css/bootstrap.css">
<%- include('nav') -%>

<section class="mb-4 container">
  <!--Section heading-->
  <h2 class="h1-responsive font-weight-bold text-center my-4 w-75">Contact us</h2>
  <!--Section description-->
  <p class="text-center w-responsive mx-auto mb-5 w-75">Do you have any questions? Please do not hesitate to contact us directly. Our team will get back to you within
    a matter of hours to help you.</p>
  <% if(successMessage.length > 0 || failureMessage.length >0){ %>
  <% if(typeof successMessage != 'undefined' && successMessage){ %>
  <div class="alert success">
    <span class="closebtn">&times;</span>
    <%= successMessage %>
  </div>
  <%  }else if(typeof failureMessage != 'undefined' && failureMessage){ %>
  <div class="alert">
    <span class="closebtn">&times;</span>
    <%= failureMessage %>
  </div>
  <%  }} %>

  <div class="row">
    <!--Grid column-->
    <div class="col-md-9 mb-md-0 mb-5">
      <form id="contact-form" name="contact-form" action="/contact-us" method="POST">
        <!--Grid row-->
        <div class="row">
          <!--Grid column-->
          <div class="col-md-6">
            <div class="md-form mb-0">
              <input type="text" id="name" name="name" class="form-control">
              <label for="name" class="">Your name</label>
            </div>
          </div>
          <!--Grid column-->

          <!--Grid column-->
          <div class="col-md-6">
            <div class="md-form mb-0">
              <input type="email" id="email" name="email" class="form-control" required>
              <label for="email" class="">Your email</label>
            </div>
          </div>
          <!--Grid column-->
        </div>
        <!--Grid row-->

        <!--Grid row-->
        <div class="row">
          <div class="col-md-12">
            <div class="md-form mb-0">
              <input type="text" id="subject" name="subject" class="form-control">
              <label for="subject" class="">Subject</label>
            </div>
          </div>
        </div>
        <!--Grid row-->

        <!--Grid row-->
        <div class="row">
          <!--Grid column-->
          <div class="col-md-12">
            <div class="md-form">
              <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea" required></textarea>
              <label for="message">Your message</label>
            </div>
          </div>
        </div>
        <!--Grid row-->
        <div class="text-center text-md-left">
          <button type="submit" class="btn btn-primary contactBtn">Send</button>
        </div>
      </form>
      <div class="status"></div>
    </div>
    <!--Grid column-->

    <!--Grid column-->
    <div class="col-md-3 text-center">
      <ul class="list-unstyled mb-0">
        <li><i class="fa fa-map-marker fa-2x"></i>
          <p>Mall</p>
        </li>

        <li><i class="fa fa-phone mt-4 fa-2x"></i>
          <p>+ 20 100 777 7777</p>
        </li>

        <li><i class="fa fa-envelope mt-4 fa-2x"></i>
          <p>moazyusuf1998@gmail.com</p>
        </li>
      </ul>
    </div>
    <!--Grid column-->
  </div>
</section>

<%- include('footer') -%>
